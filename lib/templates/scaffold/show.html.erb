<h1><%= singular_table_name.titleize %></h1>
<div class="fixed-action-btn">
  <a class="btn-floating btn-large red">
    <i class="large material-icons">mode_edit</i>
  </a>
  <ul>
    <li><%%= link_to <%= singular_table_name %>_path(@<%= singular_table_name %>), method: :delete, data: {confirm: 'Are you sure?'}, class: "btn-floating grey" do %>
          <i class="material-icons">delete</i>
      <%% end %></li>
    <li><%%= link_to edit_<%= singular_table_name %>_path(@<%= singular_table_name %>), class: "btn-floating teal" do %>
          <i class="material-icons">mode_edit</i>
      <%% end %></li>
  </ul>
</div>
<div id="edit-<%= singular_table_name %>-container">
  <div class="card">
    <div class="card-content">
      <div class="card-title">Details</div>
      <% attributes.reject(&:password_digest?).each do |attribute| -%>
          <p>
            <strong><%= attribute.human_name %>: </strong>
            <%%= @<%= singular_table_name %>.<%= attribute.name %> %>
          </p>
      <% end -%>
    </div>
  </div>
</div>

<div class="row">
  <div class="col s12">
    <%%= link_to 'Back', <%= index_helper %>_path, class: 'btn waves-effect grey lighten-1' %>
  </div>
</div>