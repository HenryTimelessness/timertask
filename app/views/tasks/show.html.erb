<h1>Task</h1>
<div class="fixed-action-btn">
  <a class="btn-floating btn-large red">
    <i class="large material-icons">mode_edit</i>
  </a>
  <ul>
    <li><%= link_to task_path(@task), method: :delete, data: {confirm: 'Are you sure?'}, class: "btn-floating grey" do %>
          <i class="material-icons">delete</i>
      <% end %></li>
    <li><%= link_to edit_task_path(@task), class: "btn-floating teal" do %>
          <i class="material-icons">mode_edit</i>
      <% end %></li>
  </ul>
</div>
<div id="edit-task-container">
  <div class="card">
    <div class="card-content">
      <div class="card-title">Details</div>
                <p>
            <strong>Name: </strong>
            <%= @task.name %>
          </p>
                <p>
            <strong>Duration in seconds: </strong>
            <%= @task.duration_in_seconds %>
          </p>
          </div>
  </div>
</div>

<div class="row">
  <div class="col s12">
    <%= link_to 'Back', tasks_path, class: 'btn waves-effect grey lighten-1' %>
  </div>
</div>